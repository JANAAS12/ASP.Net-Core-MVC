@model List<ModelTask.Models.User>

@{
    ViewData["Title"] = "Users List";
}

<h2 class="text-center mt-4">Users List</h2>

<div class="container mt-4">
    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Email</th>
                @* <th>Actions</th> *@
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.Id</td>
                    <td>@user.Name</td>
                    <td>@user.Email</td>
                    @* <td> *@
                    @*     <a href="~/Users/Edit/@user.Id" class="btn btn-primary btn-sm">Edit</a> *@
                    @*     <a href="~/Users/Delete/@user.Id" class="btn btn-danger btn-sm">Delete</a> *@
                    @* </td> *@
                </tr>
            }
        </tbody>
    </table>

    <a href="~/Users/Create" class="btn btn-success">Add New User</a>
</div>