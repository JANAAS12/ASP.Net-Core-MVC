@model ModelTask.Models.User
@{
    ViewData["Title"] = "Add New User";
}

<h2>Add New User</h2>

<form asp-action="Create" asp-controller="Users" method="post">
    <div>
        <label>Name:</label>
        <input type="text" asp-for="Name" required />
    </div>
    <div>
        <label>Email:</label>
        <input type="email" asp-for="Email" required />
    </div>
    <button type="submit">Add User</button>
</form>